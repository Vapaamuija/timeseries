# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Configuration files
[*.{ini,cfg,conf}]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Docker files
[Dockerfile*]
indent_size = 4

# Requirements files
[requirements*.txt]
indent_size = 4

# Setup files
[setup.py]
indent_size = 4

# Test files
[test_*.py]
indent_size = 4

# Script files
[scripts/*.py]
indent_size = 4

# Binary files
[*.{bin,exe,dll,so,dylib}]
charset = binary
end_of_line = unset
insert_final_newline = false
trim_trailing_whitespace = false
